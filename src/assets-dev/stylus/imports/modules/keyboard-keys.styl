keyboard-key()
    display inline-block
    min-width 1em
    padding .2em .3em
    font normal .85em/1 "Lucida Grande", Lucida, Arial, sans-serif
    text-align center
    text-decoration none
    border-radius .15em
    border none
    cursor default
    user-select none

    &[title]
        cursor help

    &,
    &.light
        background rgb(250, 250, 250)
        background linear-gradient(to bottom, rgb(210, 210, 210), rgb(255, 255, 255))
        color rgb(50, 50, 50)
        text-shadow 0 0 2px rgb(255, 255, 255)
        box-shadow inset 0 0 1px rgb(255, 255, 255),
            inset 0 0 .4em rgb(200, 200, 200),
            0 .1em 0 rgb(130, 130, 130),
            0 .11em 0 rgba(0, 0, 0, .4),
            0 .1em .11em rgba(0, 0, 0, .9)

    &.dark
        background rgb(80, 80, 80)
        background linear-gradient(to bottom, rgb(60, 60, 60), rgb(80, 80, 80))
        color rgb(250, 250, 250)
        text-shadow -1px -1px 0 rgb(70, 70, 70)
        box-shadow inset 0 0 1px rgb(150, 150, 150),
            inset 0 -.05em .4em rgb(80, 80, 80),
            0 .1em 0 rgb(30, 30, 30),
            0 .1em .1em rgba(0, 0, 0, .3)

/* = Keyboard keys */
